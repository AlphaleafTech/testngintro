<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Alphaleaf Test Suite">

    <!-- Smoke Test context -->
    <test name="smoke">
        <classes>
            <!-- first class -->
            <class name="tests.Account">
                <methods>
                    <include name="verifyUserInfoUpdate"/>
                    <include name="verifyAccountDeletion"/>
                </methods>
            </class>
            <!-- second class -->
            <class name="tests.CheckoutModule">
                <methods>
                    <include name="verifyUserCanCheckout"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="reg">
        <classes>
            <class name="tests.LoginModule"/>

            <class name="tests.CheckoutModule">
                <methods>
                    <include name="verifyItemTotal"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="all">
        <classes>
            <class name="tests.Account"/>
            <class name="tests.CheckoutModule"/>
            <class name="tests.LoginModule"/>
        </classes>
    </test>
</suite>